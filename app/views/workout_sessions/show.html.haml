- model_class = WorkoutSession
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:workout_id) + ':'
  %br
  = @workout_session.workout_id

= render 'drill_sessions'

= (link_to t('.start', :default => t("helpers.links.start")), edit_drill_session_path(@workout_session.first_drill_session), :class => 'btn btn-default' ) unless @workout_session.complete?
= link_to t('.back', :default => t("helpers.links.back")), workout_sessions_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_workout_session_path(@workout_session), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), workout_session_path(@workout_session), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
